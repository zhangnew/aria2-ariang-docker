{$DOMAIN} {
    proxy / file-manager:8888 {
        transparent
    }
    gzip
    log stdout
    errors stdout
    tls /root/conf/key/aria2.crt /root/conf/key/aria2.key
}

{$DOMAIN}/aria2 {
  root /usr/local/www/aria2
  timeouts none
  gzip
  log stdout
  errors stdout

  basicauth / {$ARIA2_USER} {$ARIA2_PWD}
  tls /root/conf/key/aria2.crt /root/conf/key/aria2.key
}
